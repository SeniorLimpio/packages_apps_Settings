<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/limpio_settings_title"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <PreferenceScreen
        android:key="general_settings"
        android:fragment="com.android.settings.limpio.GeneralSettings"
        android:title="@string/general_settings_title"
        android:icon="@drawable/ic_limpio_general" />

    <!-- Statusbar and notification settings -->
    <PreferenceScreen
        android:key="statusbar_features"
        android:fragment="com.android.settings.limpio.StatusBarFeatures"
        android:title="@string/statusbar_features_title"
        android:icon="@drawable/ic_settings_notifications" />

    <!-- Animations settings -->
    <PreferenceScreen
        android:key="animations_settings"
        android:fragment="com.android.settings.limpio.LimpioAnimationsSettings"
        android:title="@string/screen_and_animations_title"
        android:icon="@drawable/ic_limpio_animations" />

    <!-- Wakelock blocker -->
    <PreferenceScreen
            android:id="@+id/wakelock_blocker"
            android:fragment="com.android.settings.limpio.WakeLockBlocker"
            android:icon="@drawable/ic_settings_wakelock_blocker"
            android:layout="@layout/preference_wakelockblocker"
            android:title="@string/wakelock_blocker" />

</PreferenceScreen>
