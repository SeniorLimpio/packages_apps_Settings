<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/limpio_settings_title"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <!-- General animations settings -->
    <PreferenceCategory 
        android:title="@string/general_category_title" />

    <!-- Statusbar and notification settings -->
    <PreferenceScreen
        android:key="statusbar_features"
        android:fragment="com.android.settings.limpio.StatusBarFeatures"
        android:title="@string/statusbar_settings_title"
        android:icon="@drawable/ic_network_signal_4" />

    <!-- Lock screen -->
    <PreferenceScreen
        android:id="@+id/lockscreen_settings"
        android:title="@string/lockscreen_settings_title"
        android:fragment="com.android.settings.limpio.LockscreenSettings"
        android:icon="@drawable/ic_limpio_lockscreen" />

    <!-- General settings -->
    <PreferenceScreen
        android:key="general_settings"
        android:fragment="com.android.settings.limpio.GeneralSettings"
        android:title="@string/general_settings_title"
        android:icon="@drawable/ic_limpio_general" />

    <!-- Advanced settings -->
    <PreferenceCategory 
        android:title="@string/advanced_category_title" />

    <!-- Animations settings -->
    <PreferenceScreen
        android:key="animations_settings"
        android:fragment="com.android.settings.limpio.LimpioAnimationsSettings"
        android:title="@string/limpio_animations_settings_title"
        android:icon="@drawable/ic_limpio_animations" />

    <!-- Screen Recorded -->
    <PreferenceScreen
        android:key="screen_recorder"
        android:title="@string/screen_recorder_title"
        android:fragment="com.android.settings.limpio.ScreenRecorderSettings" />

    <!-- Wakelock blocker -->
    <PreferenceScreen
            android:id="@+id/wakelock_blocker"
            android:fragment="com.android.settings.limpio.WakeLockBlocker"
            android:icon="@drawable/ic_settings_wakelock_blocker"
            android:title="@string/wakelock_blocker" />

    <!-- Xposed Framework -->
    <PreferenceScreen
        android:key="xposed_framework"
        android:fragment="com.android.settings.limpio.XposedFramework"
        android:title="@string/xposed_framework_title"
        android:icon="@drawable/ic_launcher_white" />

</PreferenceScreen>
